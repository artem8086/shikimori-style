@media screen and (max-width 420px)
	.p-profiles .profile-head .head.misc .notice
		display none !important

@media screen and (max-width 768px)
	.p-profiles .profile-head
		display flex
		flex-direction column
		align-items center

	.p-profiles .profile-head .c-mobile-actions
		display none !important
	
	.p-profiles .profile-head .profile-actions
		display flex !important
		flex-direction column !important
		margin 0 20px 0 !important
		justify-content space-around
	
	.p-profiles .profile-head .profile-actions .b-tooltipped
		margin-left 0 !important

	.p-profiles .profile-head .c-history
		margin 5px 0 !important
		width 100% !important
		float none !important
		order 2
	
	.p-profiles .profile-head .c-info
		width 100%
		margin-bottom 16px !important
		order 3
	
	.p-profiles .profile-head .c-brief
		display flex !important
		flex-direction column-reverse
		align-items center
		order 1
	
	.p-profiles .profile-head .avatar
		display flex !important
		float none !important
		margin 10px auto 30px !important
		max-width 100% !important
	
	.p-profiles .profile-head .avatar img
		border-radius 50% !important
		width 160px !important
	
	.p-profiles .profile-head .head.misc
		text-align center !important

	.list-lines
		td.hoverable
		th.order-control[data-order="my"]
		th.order-control[data-order="episodes"]
			display table-cell !important
